{
  "compilerOptions": {
    "target": "ES2024",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@frame/*": ["./src/frame/*"],
      "@utils/*": ["./src/utils/*"],
      "@screen/*": ["src/screen/*"],
      "@object/*": ["./src/object/*"],
      "@coords/*": ["./src/coords/*"],
      "@errors/*": ["./src/errors/*"],

      "@frame": ["./src/frame"],
      "@utils": ["./src/utils"],
      "@screen": ["src/screen"],
      "@object": ["./src/object"],
      "@coords": ["./src/coords"],
      "@errors": ["./src/errors"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
